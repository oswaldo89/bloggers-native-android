<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.oswaldo.bloggers">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.new_blogger.NewBloggerActivity"
            android:theme="@style/CustomTheme" />
        <activity
            android:name=".ui.detail.DetailActivity"
            android:theme="@style/CustomTheme" />
        <activity
            android:name=".ui.main.MainContentActivity"
            android:label="@string/title_activity_main_content" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:theme="@style/CustomTheme" />
        <activity
            android:name=".ui.onboard.OnBoardActivity"
            android:theme="@style/CustomTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>